---
type Props = {
  title: string;
};

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="robots" content="noindex, nofollow" />
    <title>{title}</title>
    <style>
      @page {
        size: A4;
        margin: 18mm;
      }

      :root {
        --ink: #1f1f1f;
        --muted: #5f5f5f;
        --line: #dedede;
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: 'Helvetica Neue', Arial, sans-serif;
        color: var(--ink);
        line-height: 1.45;
      }

      main {
        display: grid;
        gap: 12px;
      }

      h1,
      h2,
      h3 {
        margin: 0;
      }

      h1 {
        font-size: 26px;
      }

      h2 {
        margin-top: 12px;
        font-size: 18px;
      }

      h3 {
        font-size: 15px;
      }

      p,
      li {
        font-size: 12px;
      }

      .meta {
        color: var(--muted);
        border-bottom: 1px solid var(--line);
        padding-bottom: 8px;
      }

      .cards {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
      }

      .card {
        border: 1px solid var(--line);
        border-radius: 8px;
        padding: 8px;
      }

      ul {
        margin: 6px 0 0;
        padding-left: 16px;
      }

      .note {
        border-left: 3px solid #8c8c8c;
        padding-left: 8px;
      }

      .small {
        font-size: 11px;
      }
    </style>
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
